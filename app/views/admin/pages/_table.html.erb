<table class="table table-hover table-sm">
    <thead>
        <tr>
            <th><%= t(:image) %></th>
            <th><%= t(:title) %></th>
            <th class="text-center">Eliminar</th>
        </tr>
    </thead>
    <tbody>
        <% pages.each do |page| %>
        <tr>
            <td width="200">
                <a href="/<%= page.full_url %>" target="_blank" class="btn btn-link" title="<%= page.title %>">
                    <%= image_tag page.og_image.url, width: 200 %>
                </a>
            </td>
            <td>
                <%= link_to page.title, edit_admin_page_url(page), class: "btn" %> <br>
            </td>
            <td class="text-center">
                <%= link_to admin_page_path(page), method: :delete, class: "btn btn-outline-danger btn-sm" , data: { confirm: "¿Estás seguro de eliminar la página #{page.title}?" } do %>
                <i class='fas fa-trash'></i> Eliminar
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>