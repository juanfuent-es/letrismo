<div class="logoContainer intro-item"><%= image_tag("equills.svg") %></div>
<div class="formBox intro-item">
  <h2>Registrarse</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:class => "formContainer"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="formInputs intro-item">
    <%= f.label :username, "Nickname" %>
    <%= f.text_field :username, autofocus: true, autocomplete: "Nickname", required: true %>
    <%= f.label :email, "Email" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
    <%= f.label :password, "ContraseÃ±a" %>
    <%= f.password_field :password, autocomplete: "new-password", required: true %>
    <%= f.label :password_confirmation, "Confirmar ContraseÃ±a" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
  </div>
  <div class="formBottom intro-item">
    <%= f.submit "Registrarse" %>
    <%= render "devise/shared/links" %>
  </div>
  <% end %>
</section>