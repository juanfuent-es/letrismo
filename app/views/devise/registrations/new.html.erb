<div class="logoContainer"><%= image_tag("equills.svg") %></div>
<div class="formBox">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:class => "formContainer"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="formInputs">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "u-full-width" %>
    <%= f.label :password, t(:password) %>
    <%= f.password_field :password, autocomplete: "new-password", :class => "u-full-width" %>
    <%= f.label :password_confirmation, t(:password_confirmation) %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "u-full-width" %>
  </div>
  <div class="formBottom">
    <%= f.submit "Registrarse" %>
    <%= render "devise/shared/links" %>
  </div>
  <% end %>
</section>