<section class="container">
  <div class="twelve columns">
    <h2>Registrarse</h2>
    <p>Registrarte para poder contribuir a letrismo</p>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field twelve columns">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "u-full-width" %>
  </div>
  <div class="row">
    <div class="field six columns">
      <%= f.label :password, t(:password) %>
      <%= f.password_field :password, autocomplete: "new-password", :class => "u-full-width" %>
    </div>
    <div class="field six columns">
      <%= f.label :password_confirmation, t(:password_confirmation) %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "u-full-width" %>
    </div>
    <div class="actions twelve columns">
      <%= f.submit "Registrarse" %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
  <% end %>
</section>