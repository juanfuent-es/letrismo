<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'space-y-6') do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<div class="pt-2">
  <%= f.label :email, t(:email) %>
  <%= f.email_field :email, autofocus: true, placeholder: t(:email), autocomplete: "email", class:  "", required: true %>
</div>

<div class="pt-2">
  <%= f.label :password do %>
    <%= t(:password) %>
    <% if @minimum_password_length %>
    <small class="italic float-right text-gray-500">*<%= "#{@minimum_password_length} #{t(:characters_minimum)}" %></small>
    <% end %>
  <% end %>
  <%= f.password_field :password, required: true, placeholder: "********", autocomplete: "new-password", class:  "", required: true %>
</div>

<div class="pt-2">
  <%= f.label :password_confirmation, t(:password_confirmation) %>
  <%= f.password_field :password_confirmation, required: true, placeholder: "********", autocomplete: "new-password", class:  "", required: true %>
</div>

<footer class="pt-2">
  <%= f.submit t(:sign_up), class: "my-2" %>
  <%= render "devise/shared/links" %>
</footer>

<% end %>