<div class="text-center text-sm text-gray-500 pt-2">
  <%- if devise_mapping.omniauthable? %>
  <div class="social-auth-links text-center">
    <p>- <%= t(:or) %> -</p>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-block btn-primary", method: :post do %>
        <%= "#{t(:login_with)} #{OmniAuth::Utils.camelize(provider)}" %>
      <% end %>
    <% end %>
  </div>
  <% end %>

  <%- if controller_name != 'sessions' %>
    <p>
      <%= t("devise.shared.links.i_already_have_an_account") %>
      <%= link_to "/#{@lang}/sign_in", class: "link" do %>
        <%= t("login") %>
      <% end %>
    </p>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p>
    <%= t(:not_a_member) %>
    <%= link_to "/#{@lang}/sign_up", class: "link" do %>
    <%= t("devise.shared.links.sign_up") %>
    <% end %>
  </p>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <p>
    <%= link_to "/#{@lang}/confirmation", class: "link" do %>
    <%= t("devise.shared.links.didn_t_receive_confirmation_instructions") %>
    <% end %>
  </p>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <p>
    <%= link_to "/#{@lang}/unlock", class: "link" do %>
    <%= t("didn_t_receive_unlock_instructions") %>
    <% end %>
  </p>
  <% end %>

</div>