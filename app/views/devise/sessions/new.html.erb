<section class="container">
  <div class="twelve-columns">
    <h2>Iniciar Sesión</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {:class => ""}) do |f| %>
  <div class="row">
    <div class="field six columns">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "u-full-width" %>
      <%= f.label :remember_me do %>
      <%= f.check_box :remember_me %>
      <span class="label-body">Recordar Sesión</span>
      <% end %>
    </div>
    <div class="field six columns">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "current-password", :class => "u-full-width" %>
      <%= link_to "Olvidé mi contraseña", new_password_path(resource_name) %>
    </div>
    <div class="actions twelve columns">
      <%= f.submit "Iniciar Sesión", class: "button" %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
  <% end %>
</section>