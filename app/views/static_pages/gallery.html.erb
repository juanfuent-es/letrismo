<div class="container" id="container">
  <div class="logoContainer intro-item"><%= image_tag("equills.svg") %></div>
  <div class="titleContainer">
    <h1>Galer√≠a</h1>
  </div>
  <div id="containerGrid">
    <ul>
      <% @letrisms.each do |letrism| %>
      <li>
        <%= link_to letrism_path(letrism.slug) do %>
        <%= image_tag letrism.img.thumb.url, width: 100 %>
        <div><p>Por <%= letrism.user.username %></p></div>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
<footer id="pagination-container">
	<%= will_paginate @letrisms %>
</footer>