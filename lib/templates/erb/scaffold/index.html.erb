<%% provide(:title, "Lista de #{t(:<%= plural_table_name %>)}") %>

<!-- Content Header (Page header) -->
<header class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-12">
        <h1 class="card-title">Lista de <%%= t(:<%= plural_table_name %>) %> <sup><%%= <%= singular_table_name.titleize %>.all.count %></sup></h1>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</header>

<!-- Main content -->
<section class="content">
  <!-- Default box -->
  <div class="card card-primary card-outline">
    <header class="card-header">
      <%%= link_to new_admin_<%= singular_table_name %>_path, class: 'btn btn-outline-primary btn-sm float-right' do %>
        <i class="fas fa-plus"></i> <%%= "#{t(:new)} #{t(:<%= singular_table_name %>)}" %>
      <%% end %>
    </header>
    <div class="card-body">
      <table class="table table-hover table-sm datatable text-sm">
        <thead>
          <tr>
            <th>Editar</th>
            <th class='text-center'>Eliminar</th>
          </tr>
        </thead>

        <tbody>
          <%% @<%= plural_table_name%>.each do |<%= singular_table_name %>| %>
            <td>
            <%%= link_to edit_admin_<%= singular_table_name %>_url(<%= singular_table_name %>), class: "btn btn-link btn-sm" do %>
              <i class="fas fa-pencil-alt"></i> Editar <%= singular_table_name %>
            <%% end %>
            </td>
            <td class='text-center'>
              <%%= link_to admin_<%= singular_table_name %>_path(<%= singular_table_name %>), method: :delete, class: "btn btn-outline-danger btn-sm" , data: { confirm: "¿Estás seguro de eliminar este #{t(:<%= singular_table_name %>)}?" } do %>
                <i class='fas fa-trash'></i> Eliminar
              <%% end %>
            </td>
            </tr>
          <%% end %>
        </tbody>
      </table>
    </div>
    <!-- /.card-body -->
  </div>
  <!-- /.card -->

</section>
<!-- /.content -->